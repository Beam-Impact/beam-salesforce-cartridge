{
  "name": "mfsg",
  "version": "0.0.1",
  "description": "Mobile first SiteGenesis",
  "main": "index.js",
  "scripts": {
    "test": "istanbul test ./node_modules/mocha/bin/_mocha -- -R spec test/unit/**/*.js",
    "test:integration": "./node_modules/.bin/mocha --reporter spec",
    "compile:scss": "node-sass --include-path node_modules/bootstrap-sass/assets/stylesheets --include-path node_modules/font-awesome/scss --include-path node_modules/flag-icon-css/sass app_storefront_base/cartridge/scss/default/ -o app_storefront_base/cartridge/static/default/css/",
    "compile:js": "mkdir -p app_storefront_base/cartridge/static/default/js && node bin/Makefile.js browserify",
    "compile:fonts": "mkdir -p app_storefront_base/cartridge/static/default/fonts && cp -r node_modules/font-awesome/fonts/ app_storefront_base/cartridge/static/default/fonts && cp -r node_modules/flag-icon-css/flags/ app_storefront_base/cartridge/static/default/fonts/flags",
    "lint": "eslint . && stylelint --syntax scss \"app_storefront_base/cartridge/scss/**/*.scss\"",
    "copyResource": "node bin/Makefile.js copyResource -- ",
    "doc": "bin/doc.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/demandware/storefront-base.git"
  },
  "author": "Ilya Volodin <ivolodin@demandware.com>",
  "license": "ISC",
  "homepage": "https://bitbucket.org/demandware/storefront-base#readme",
  "devDependencies": {
    "ampersand-model": "^8.0.0",
    "ampersand-view": "^10.0.1",
    "autoprefixer": "^6.3.7",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb-base": "^5.0.1",
    "eslint-plugin-import": "^1.12.0",
    "handlebars": "^4.0.5",
    "hbsfy": "^2.7.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.1",
    "proxyquire": "1.7.4",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "stylelint": "^6.7.1",
    "stylelint-config-standard": "^9.0.0",
    "stylelint-scss": "^1.2.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@tridnguyen/config": "^2.3.1",
    "bootstrap-sass": "^3.3.6",
    "flag-icon-css": "^2.3.0",
    "font-awesome": "^4.6.3",
    "jquery": "^2.2.4",
    "minimist": "^1.2.0",
    "request": "^2.74.0"
  },
  "paths": {
    "resources": "../sitegenesis/app_storefront_base/cartridge/templates/resources/"
  }
}
