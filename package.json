{
  "name": "mfsg",
  "version": "0.0.1",
  "description": "Mobile first SiteGenesis",
  "main": "index.js",
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "test": "mocha -R spec test/unit/**/*.js",
    "test:appium": "wdio test/appium/webdriver/wdio.appium.js",
    "cover": "istanbul cover ./node_modules/.bin/_mocha -- -R spec test/unit/**/*.js",
    "test:integration": "mocha --reporter spec",
    "test:functional": "wdio test/functional/webdriver/wdio.conf.js",
    "test:functional:docker": "bin/test-functional-docker.sh",
    "compile:scss": "node-sass --include-path node_modules --include-path node_modules/flag-icon-css/sass app_storefront_base/cartridge/client/scss/default/ -o app_storefront_base/cartridge/static/default/css/",
    "compile:js": "mkdir -p app_storefront_base/cartridge/static/default/js && node bin/Makefile.js browserify",
    "compile:fonts": "mkdir -p app_storefront_base/cartridge/static/default/fonts && cp -r node_modules/font-awesome/fonts/ app_storefront_base/cartridge/static/default/fonts && cp -r node_modules/flag-icon-css/flags/ app_storefront_base/cartridge/static/default/fonts/flags",
    "lint": "eslint . && stylelint --syntax scss \"app_storefront_base/cartridge/client/scss/**/*.scss\"",
    "upload": "dwupload --file ",
    "watch:static": "onchange 'app_storefront_base/cartridge/client/js/**/*.js' -- npm run compile:js & onchange 'app_storefront_base/cartridge/client/scss/**/*.scss' -- npm run compile:scss & onchange 'app_storefront_base/cartridge/static/**/*' -w -- npm run upload -- {{changed}}",
    "watch:cartridge": "onchange 'app_storefront_base/cartridge/(controllers|models|scripts|templates|forms)/**/*' -w -- npm run upload -- {{changed}}",
    "watch": "npm run watch:static & npm run watch:cartridge",
    "doc": "bin/doc.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/demandware/storefront-base.git"
  },
  "author": "Ilya Volodin <ivolodin@demandware.com>",
  "license": "ISC",
  "homepage": "https://bitbucket.org/demandware/storefront-base#readme",
  "devDependencies": {
    "@tridnguyen/config": "^2.3.1",
    "ampersand-model": "^8.0.0",
    "ampersand-view": "^10.0.1",
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.13.2",
    "babel-preset-es2015": "^6.13.2",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "cldr-data": "^29.0.1",
    "dwupload": "^3.4.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb-base": "^5.0.1",
    "eslint-plugin-import": "^1.12.0",
    "globalize": "^1.1.1",
    "handlebars": "^4.0.5",
    "hbsfy": "^2.7.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.4",
    "lodash": "^4.14.2",
    "minimist": "^1.2.0",
    "mocha": "^2.5.3",
    "mocha-junit-reporter": "^1.12.0",
    "moment-timezone": "^0.5.5",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.1",
    "proxyquire": "1.7.4",
    "q": "^1.4.1",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "stylelint-scss": "^1.3.4",
    "url": "^0.11.0",
    "webdriverio": "^3.3.0",
    "xml2js": "^0.4.17"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.4",
    "flag-icon-css": "^2.3.0",
    "font-awesome": "^4.6.3",
    "jquery": "^2.2.4"
  }
}
