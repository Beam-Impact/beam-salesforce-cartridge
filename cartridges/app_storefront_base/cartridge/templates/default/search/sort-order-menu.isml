<isif condition="${pdict.productSearch.productIds.length > 0}">
    <select name="sort-order" class="custom-select">
        <isloop items="${pdict.productSort.options}" var="option">
            <option value="${option.url}"
                data-id="${option.id}"
                <isif condition="${pdict.productSort.ruleId === option.id}">selected</isif>
            >
                ${option.displayName}
            </option>
        </isloop>
    </select>
</isif>
