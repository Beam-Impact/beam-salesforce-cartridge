<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <!-- TODO: Add billing-same-as-shipping information here -->
    <field formid="shippingAddressUseAsBillingAddress" label="profile.billingSameAsShipping" type="boolean"
           binding="shippingAddressUseAsBillingAddress" checked="true" />

    <field formid="firstName" label="profile.firstname" type="string" mandatory="true" binding="firstName"
           max-length="50" missing-error="error.address.firstname.missing" range-error="error.address.firstname.range.invalid"/>
    <field formid="lastName" label="profile.lastname" type="string" mandatory="true" binding="lastName" max-length="50"
           missing-error="error.address.lastname.missing" range-error="error.address.lastname.range.invalid"/>
    <field formid="address1" label="resource.address1" type="string" mandatory="true" binding="address1" max-length="50"
           missing-error="error.address.address1.missing" range-error="error.address.address1.range.invalid"/>
    <field formid="address2" label="resource.address2" type="string" mandatory="false" binding="address2"
           max-length="50" range-error="error.address.address2.range.invalid"/>
    <field formid="city" label="resource.city" type="string" mandatory="true" binding="city" min-length="2"
           max-length="50" missing-error="error.address.city.missing" range-error="error.address.city.range.invalid"/>

    <!--  postal code -->
    <field formid="postal" label="resource.zipcode" type="string" mandatory="true" min-length="5" max-length="10"
           regexp="(^\d{5}(-\d{4})?$)|(^[abceghjklmnprstvxyABCEGHJKLMNPRSTVXY]{1}\d{1}[A-Za-z]{1} *\d{1}[A-Za-z]{1}\d{1}$)"
           binding="postalCode"
           range-error="error.address.postalCode.range.invalid"
           missing-error="error.address.postalCode.missing"/>

    <!-- use set of supported shipping countries -->
    <field formid="country" label="resource.country" type="string" mandatory="true" binding="countryCode"
           missing-error="address.country.missing" value-error="address.field.invalid">
        <options>
            <option optionid="us" label="country.unitedstates" value="us"/>
        </options>
    </field>

    <!-- use global state list -->
    <include formid="states" name="states"/>

    <!-- shipping method selection -->
    <field formid="paymentMethod" type="string" mandatory="true" />

    <!-- TODO: Add Payment information here -->
    <field formid="cardType" label="profile.cardtype" type="string" mandatory="true" binding="cardType"
           max-length="16" missing-error="error.card.info.missing" />

    <field formid="cardNumber" label="profile.cardnumber" type="string" mandatory="true" binding="cardNumber"
           max-length="16" missing-error="error.card.info.missing.cardNumber" />

    <field formid="expirationMonth" label="profile.expirationmonth" type="string" mandatory="true"
           binding="expirationMonth" missing-error="error.card.info.missing.expirationMonth"
           value-error="address.field.invalid" >
        <options>
            <option optionid="" label="select.default.month" value=""/>
            <option optionid="01" label="01" value="01"/>
            <option optionid="02" label="02" value="02"/>
            <option optionid="03" label="03" value="03"/>
            <option optionid="04" label="04" value="04"/>
            <option optionid="05" label="05" value="05"/>
            <option optionid="06" label="06" value="06"/>
            <option optionid="07" label="07" value="07"/>
            <option optionid="08" label="08" value="08"/>
            <option optionid="09" label="09" value="09"/>
            <option optionid="10" label="10" value="10"/>
            <option optionid="11" label="11" value="11"/>
            <option optionid="12" label="12" value="12"/>
        </options>
    </field>

    <field formid="expirationYear" label="profile.expiration.year" type="string" mandatory="true"
        missing-error="error.card.info.missing.expirationYear" >
        <options>
            <option optionid="" label="select.default.year" value=""/>
        </options>
    </field>

    <field formid="securityCode" label="profile.securitycode" type="string" mandatory="true" binding="securityCode"
           max-length="3" missing-error="error.card.info.missing.securityCode" />

    <field formid="email" label="profile.email" type="string" mandatory="true" binding="email"
           max-length="254" missing-error="error.card.info.missing.email" />

    <field formid="phone" label="profile.phone" description="address.phone.example" type="string" mandatory="true"
           binding="phone" max-length="20" missing-error="error.card.info.missing.phone" />
</form>
