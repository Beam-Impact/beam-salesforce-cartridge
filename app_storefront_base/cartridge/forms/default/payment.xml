<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <!-- TODO: Add billing-same-as-shipping information here -->
    <include formid="address" name="address" />

    <!-- TODO: Add Payment information here -->
    <field formid="expirationYear" label="profile.expirationyear" type="string" mandatory="true" binding="expirationYear"
           max-length="4" missing-error="address.expirationyear.missing" range-error="address.field.invalid"/>

    <!-- -->
    <field formid="expirationMonth" label="profile.expirationmonth" type="string" mandatory="true" binding="expirationMonth"
           max-length="2" missing-error="address.expirationmonth.missing" range-error="address.field.invalid"/>

    <field formid="securityCode" label="profile.securitycode" type="string" mandatory="true" binding="securityCode"
           max-length="3" missing-error="address.securitycode.missing" range-error="address.field.invalid"/>

    <field formid="email" label="profile.email" type="string" mandatory="true" binding="email"
           max-length="4" missing-error="address.email.missing" range-error="address.field.invalid"/>

    <!--Card Number
