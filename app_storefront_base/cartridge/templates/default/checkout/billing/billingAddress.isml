<!--- make drop down--->
<div class="row">
    <div class="col-sm-6">
        <div class="form-group ${pdict.forms.billingForm.country.htmlName}">
            <label for="billingCountry">${Resource.msg('field.billing.address.country','address',null)}</label>
            <select class="form-control billingCountry" id="billingCountry"
                <isprint value=${pdict.forms.billingForm.country.attributes} encoding="off"/>
                autocomplete="billing country">
                    <isloop items=${pdict.forms.billingForm.country.options} var="country">
                        <option id="${country.id}" <isif condition="${country.selected}">selected</isif> >${country.htmlValue}</option>
                    </isloop>
            </select>
            <div class="form-control-feedback"></div>

        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group ${pdict.forms.billingForm.states.state.htmlName}">
            <label for="billingState">${Resource.msg('field.billing.address.state','address',null)}</label>
            <select class="form-control billingState" id="billingState"
                <isprint value=${pdict.forms.billingForm.states.state.attributes} encoding="off"/>
                autocomplete="billing region">
                    <isloop items=${pdict.forms.billingForm.states.state.options} var="state">
                        <option id="${state.id}" <isif condition="${state.selected}">selected</isif> >${state.htmlValue}</option>
                    </isloop>
            </select>
            <div class="form-control-feedback"></div>
        </div>
    </div>
</div>

