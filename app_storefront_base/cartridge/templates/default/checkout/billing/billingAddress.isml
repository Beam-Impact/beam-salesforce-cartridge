<div class="row">
    <div class="col-sm-6">
        <div class="form-group ${pdict.forms.billingForm.firstName.htmlName}">
            <label for="billingFirstName">${Resource.msg('field.billing.address.first.name','address',null)}</label>
            <input autofocus type="text" class="form-control billingFirstName" id="billingFirstName"
                <isprint value=${pdict.forms.billingForm.firstName.attributes} encoding="off"/>
                autocomplete="given-name" >
            <div class="form-control-feedback"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group ${pdict.forms.billingForm.lastName.htmlName}">
            <label for="billingLastName">${Resource.msg('field.billing.address.last.name','address',null)}</label>
            <input type="text" class="form-control billingLastName" id="billingLastName"
                <isprint value=${pdict.forms.billingForm.lastName.attributes} encoding="off"/>
                autocomplete="family-name">
            <div class="form-control-feedback"></div>
        </div>
    </div>
</div>

