<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="shippingFirstName">${Resource.msg('field.shipping.address.first.name','address',null)}</label>
            <input autofocus type="text" class="form-control shippingFirstName" id="firstName" <isprint value=${pdict.forms.shippingForm.firstName.attributes} encoding="off" /> autocomplete="given-name" value="${pdict.forms.shippingForm.firstName.htmlValue}" >
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="shippingLastName">${Resource.msg('field.shipping.address.last.name','address',null)}</label>
            <input type="text" class="form-control shippingLastName" id="lastName" <isprint value=${pdict.forms.shippingForm.lastName.attributes} encoding="off" /> autocomplete="family-name">
        </div>
    </div>
</div>

