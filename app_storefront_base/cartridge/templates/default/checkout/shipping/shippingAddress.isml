            <div class="form-control-feedback"><isprint value="${addressFields.address1.error}" ></div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="form-group
            <isif condition=${addressFields.address2.mandatory === true}>required</isif>
            ${addressFields.address2.htmlName}">
            <label class="form-control-label" for="shippingAddressTwo">
                ${Resource.msg('field.shipping.address.two','address',null)}
            </label>
            <input type="text" class="form-control shippingAddressTwo" id="shippingAddressTwo"
                <isprint value=${addressFields.address2.attributes} encoding="off"/>
