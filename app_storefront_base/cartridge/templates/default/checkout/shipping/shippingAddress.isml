<!--- make drop down--->
<div class="row">
    <div class="col-sm-6">
        <div class="form-group
            <isif condition=${addressFields.country.mandatory === true}>required</isif>
            ${addressFields.country.htmlName}">
            <label class="form-control-label" for="shippingCountry">
                ${Resource.msg('field.shipping.address.country','address',null)}
            </label>
            <select class="form-control shippingCountry" id="shippingCountry"
                <isprint value=${addressFields.country.attributes} encoding="off"/>
                autocomplete="shipping country" >
                    <isloop items=${addressFields.country.options} var="country">
                        <option id="${country.id}">${country.htmlValue}</option>
                    </isloop>
            </select>
            <div class="form-control-feedback"><isprint value="${addressFields.country.error}" ></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group
            <isif condition=${addressFields.states.state.mandatory === true}>required</isif>
            ${addressFields.states.htmlName}">
            <label class="form-control-label" for="shippingState">
                ${Resource.msg('field.shipping.address.state','address',null)}
            </label>
            <select class="form-control shippingState" id="shippingState"
                <isprint value=${addressFields.states.attributes} encoding="off"/>
                autocomplete="shipping state" >
                    <isloop items=${addressFields.states.state.options} var="state">
                        <option id="${state.id}">${state.htmlValue}</option>
                    </isloop>
            </select>
            <div class="form-control-feedback"><isprint value="${addressFields.states.error}" ></div>
        </div>
    </div>
</div>

