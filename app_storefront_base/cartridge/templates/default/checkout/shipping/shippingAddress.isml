<!--- make drop down--->
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="shippingCountry">${Resource.msg('field.shipping.address.country','address',null)}</label>
            <select class="form-control shippingCountry" id="country" <isprint value=${pdict.forms.shippingForm.country.attributes} encoding="off" /> autocomplete="shipping country">
                <isloop items=${pdict.forms.shippingForm.country.options} var="country">
                    <option id="${country.id}">${country.htmlValue}</option>
                </isloop>
            </select>

        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="shippingState">${Resource.msg('field.shipping.address.state','address',null)}</label>
            <select class="form-control shippingState" id="states" <isprint value=${pdict.forms.shippingForm.states.attributes} encoding="off" /> autocomplete="shipping state">
                <isloop items=${pdict.forms.shippingForm.states.state.options} var="state">
                    <option id="${state.id}">${state.htmlValue}</option>
                </isloop>
            </select>

        </div>
    </div>
</div>

<div class="row">
